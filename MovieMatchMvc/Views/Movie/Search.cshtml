@{
	ViewBag.Title = "Search";
}

@model List<MovieMatchMvc.Views.Movie.SearchVM>

<h1>Search "Query"</h1>
<h2>Titles</h2>

<div>
	<ul style="display: flex; flex-direction: column ;align-items: flex-start;">

		@foreach (var movie in Model)
		{
			<li style="display:flex">
				<div><img style="height:200px; width: 150px;" src="@movie.Poster" class="card-img-left" alt="..." /></div>
				<div style="display: flex;flex-direction: column; justify-content: space-between; flex-wrap: nowrap; align-items: flex-start;">
					<ul><a style="font-weight: bold">@movie.Title</a></ul>
					<ul>@movie.ReleaseDate</ul>
					<ul>Average score: @movie.Rating</ul>
				</div>
				<div>
					<form asp-controller="Movie" asp-action="AddMovieToList" method="post">
						<!-- Send unique movie ID to identify the movie server-side -->
						<input type="hidden" name="movieId" value="@movie.Id" />
						<input type="submit" value="Add to watchlist">
					</form>
				</div>

			</li>
		}

	</ul>
</div>