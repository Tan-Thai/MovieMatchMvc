@model List<MovieMatchMvc.Views.Movie.WatchlistVM>

<form  class="form-container" asp-action="MatchWatchListsPost" asp-controller="Movie">
<h2> Who's Your Friend?</h2>
    <div class="form-group form-friendlist">
        <div style="text-align:left;">
            <label for="username">Enter username:</label>
            <input type="text" class="form-control" id="username" name="username" required />
            <button type="submit" class="btn btn-primary">Compare</button>
        </div>
    </div>
</form>


<div class="buddy-search-container">  
<h2 style="color: antiquewhite">Common Movies with: @ViewBag.OtherUsername</h2>
    <div class="buddy-search-result">
        <div class="buddy-search-card">
            <div>
                <div>
@if (Model == null)
{
                        <p>No common movies found. Consider adding more films to your list or stepping out of your comfort zone</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
              <th style="color: antiquewhite">Title</th>
                @*<th>Poster</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td style="color: antiquewhite"><img src="@movie.Poster" alt="@movie.Title" width="100"></td>
                                        <td style="color: antiquewhite"><a asp-action="Details" asp-controller="Movie" asp-route-id="@movie.MovieId">@movie.Title</a></td>
                </tr>
            }
        </tbody>
    </table>
}
                </div>
            </div>
        </div>
    </div>
</div>