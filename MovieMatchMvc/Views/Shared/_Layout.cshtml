<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>



        <link rel="stylesheet" href="~/Styles/Styles.css" />"
</head>
<body>
    <span id="space-filler"></span>
    <nav id="navbar-reset" class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <div class="d-flex justify-content-between w-100">
                <a class="nav-link asp-controller="Movie" asp-action="Index">Home</a>
                <form asp-action="Search" asp-controller="Movie" method="get" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="query" class="form-control" placeholder="Search for a movie" />
                    </div>
                    <button type="submit" class="btn btn-primary ml-2 colored-button">Search</button>
                </form>
                 <span class="d-flex flex-row">
                    @if (User.Identity.IsAuthenticated)
                    {
                       @*  <div class="d-flex align-items-center">
                            <p>Signed in as: @User.Identity.Name</p>
                        </div> *@
                            
                            <a asp-controller="Movie" asp-action="Watchlist" class="nav-link colored-button">Watch List</a>
                            <a asp-controller ="Movie" asp-action ="MatchWatchLists" class="nav-link colored-button"> Match with friend </a>
                            <a asp-controller="Account" asp-action="LogOut" class="nav-link colored-button">Sign Out @User.Identity.Name</a>
                    }
                    else
                    {
                            <a asp-controller="Account" asp-action="Register" class="nav-link colored-button">Signup</a>
                            <a asp-controller="Account" asp-action="Login" class="nav-link colored-button">Login</a>
                    }
                </span>
            </div>
        </div>
    </nav>

    @* <div style="width: 70%; margin: 0 auto;"> *@
        <div>
        @RenderBody()
    </div>
    <footer>
            <div class="container">
                <div class="row">
                 <div class="col-md-12">
                    <hr />
                    <p class="text-center">© 2020 - MovieApp. <br /> Data fetched from <a href="https://www.themoviedb.org/">TMDB</a></p>
                </div>
            </div>
            </div>
    </footer>
    @RenderSection("scripts",false)
</body>
</html>
<style>
    .container p {
        color: antiquewhite;
    }
</style>

<style>
    .colored-button {
        background-color: #4A6C57;
        padding: 10px 20px;
        margin: 7px;
        border-radius: 10px;
    }

        .colored-button:hover {
            background-color: #629074;
        }
</style>
